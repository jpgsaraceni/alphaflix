{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
         "padding-line-between-statements": [
            "error", 
            { "blankLine": "always", "prev": "*", "next": "*" },
            { "blankLine": "any", "prev": "const", "next": "const" },
            { "blankLine": "any", "prev": "import", "next": "import" }
        ]
    }
}
